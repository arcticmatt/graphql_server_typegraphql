    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es2018", "esnext.asynciterable"],
    "module": "commonjs",
    "outDir": "./dist/",
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2018"
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.tsx", "./src/**/*.ts"]
}
